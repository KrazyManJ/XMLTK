<Tk xmlns="Tkinter" title="Calculator" geometry="300x400" bg="#343845" resizable="false false">

    <Variable name="display"/>

    <ConfigClass name="button" borderwidth="0" width="3" command="insert" bg="#dbdbdb" fg="black" activebackground="white" activeforeground="black" font="Arial; 20"/>
    <ConfigClass name="clear" command="clear" bg="#428df5" activebackground="#a7cbfc" activeforeground="white" fg="white"/>
    <ConfigClass name="equals" command="equals" bg="#f59842" activeforeground="white" activebackground="#ffbe82" fg="white"/>

    <Label justify="right" font="Arial;30" bg="#2c2f38" fg="white" textvariable="display">
        <pack fill="x" padx="5" pady="10 10"/>
    </Label>
    <Frame bg="#2c2f38">
        <Button  configclass="button clear">C<grid row="0" column="0" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">/<grid row="0" column="1" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">%<grid row="0" column="2" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">*<grid row="0" column="3" sticky="NESW" padx="5" pady="5"/></Button>

        <Button configclass="button">7<grid row="1" column="0" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">8<grid row="1" column="1" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">9<grid row="1" column="2" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">-<grid row="1" column="3" sticky="NESW" padx="5" pady="5"/></Button>

        <Button configclass="button">4<grid row="2" column="0" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">5<grid row="2" column="1" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">6<grid row="2" column="2" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">+<grid row="2" column="3" sticky="NESW" padx="5" pady="5"/></Button>
        <
        <Button configclass="button">1<grid row="3" column="0" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">2<grid row="3" column="1" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">3<grid row="3" column="2" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button equals">=<grid rowspan="2" row="3" column="3" sticky="NESW" padx="5" pady="5"/></Button>

        <Button configclass="button">0<grid columnspan="2" row="4" column="0" sticky="NESW" padx="5" pady="5"/></Button>
        <Button configclass="button">.<grid row="4" column="2" sticky="NESW" padx="5" pady="5"/></Button>

        <pack fill="both" pady="0 5" padx="5"/>
        <columnconfig index="0 1 2 3" weight="1"/>
        <rowconfig index="0 1 2 3 4" weight="1"/>
    </Frame>
</Tk>