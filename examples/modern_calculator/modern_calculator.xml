<Tk xmlns="Tkinter" geometry="300x400">
    <Variable name="display"/>
    <Style name="button" font="Arial;20" padding="15"/>
    <T-Entry state="readonly" font="Arial;30" textvariable="display" justify="right">
        <pack padx="5" pady="5" fill="both"/>
    </T-Entry>
    <Frame>
        <T-Button command="clear" style="button">C<grid row="0" column="0" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">/<grid row="0" column="1" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">%<grid row="0" column="2" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">*<grid row="0" column="3" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">7<grid row="1" column="0" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">8<grid row="1" column="1" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">9<grid row="1" column="2" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">-<grid row="1" column="3" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">4<grid row="2" column="0" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">5<grid row="2" column="1" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">6<grid row="2" column="2" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">+<grid row="2" column="3" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">1<grid row="3" column="0" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">2<grid row="3" column="1" sticky="NESW"/></T-Button>
        <T-Button command="insert" style="button">3<grid row="3" column="2" sticky="NESW"/></T-Button>
        <T-Button command="equals" style="button">=<grid row="3" column="3" sticky="NESW" rowspan="2"/></T-Button>
        <T-Button command="insert" style="button">0<grid row="4" column="0" sticky="NESW" columnspan="2"/></T-Button>
        <T-Button command="insert" style="button">.<grid row="4" column="2" sticky="NESW"/></T-Button>
        <pack padx="5" pady="5" fill="both"/>
        <rowconfig index="0 1 2 3 4" weight="1"/>
        <columnconfig index="0 1 2 3" weight="1"/>
    </Frame>
</Tk>